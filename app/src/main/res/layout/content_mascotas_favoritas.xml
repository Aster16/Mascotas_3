<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android.support.v7.cardview="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android.support.v7.cardview:cardCornerRadius="@dimen/border"
    android.support.v7.cardview:cardElevation="@dimen/elevacionCard"
   >

   <LinearLayout
       android:id="@+id/ll"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:background="@color/colorPrimary">
   <ImageView
       android:id="@+id/ImagenMascota"
       android:layout_width="250dp"
       android:layout_height="250dp"
       android:src="@drawable/pitbull"
       android:layout_gravity="center"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:background="@color/Fondo"
       >
      <ImageButton
          android:id="@+id/huesoblanco"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/bone"/>
      <TextView
          android:id="@+id/NombreMascota"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="@string/NombreMascota"
          android:textStyle="bold"
          android:paddingLeft="@dimen/MargenIzquierdadeHueso"
          android:gravity="center"
          android:textSize="@dimen/TextPetNameSize"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="end|center">
      <TextView
          android:id="@+id/NumerodeLikes"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="5"
          android:textStyle="bold"
          android:gravity="center|end"
          android:textSize="@dimen/TextPetNameSize"
          android:paddingRight="@dimen/MargenIzquierdadeHueso"/>
      <ImageView
          android:id="@+id/huesodorado"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/yellow_bone"/>
      </LinearLayout>
   </LinearLayout>


   </LinearLayout>





</android.support.v7.widget.CardView>
